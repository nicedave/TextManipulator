@model TextManipulator.ViewModel.TextManipulatorFormViewModel

@{
    ViewBag.Title = "Text Manipulator!";
}

<h2>@ViewBag.Title</h2>
<h3>@Model.AlgorithmName</h3>


@using (Html.BeginForm("Manipulate", "TextManipulators"))
{
    @Html.ValidationSummary(true, "Please fix the following errors.");

    <div class="form-group">
        @Html.LabelFor(m => m.Text)
        @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Text)
    </div>

    <div class="form-group">
        <label>Result:</label> 
        @*@Html.LabelFor(m => m.Text)*@
        @Html.TextBoxFor(m => m.ManipulatedText, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(m => m.Text)*@
    </div>

    <button type="submit" class="btn btn-primary">Manipulate</button>
}

